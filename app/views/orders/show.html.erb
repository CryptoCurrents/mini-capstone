<h1>Order #75030<%= @order.id %> Created</h1>
<h2>Bought by: <%= @order.user.name %></h2>

<% @order.carted_products.each do |carted_product| %>
  <h2><%= carted_product.product.name %> - <%= carted_product.quantity %> X <%= number_to_currency(carted_product.product.price) %></h2>
<% end %>

<h2>Subtotal: <%= number_to_currency(@order.subtotal) %></h2>
<h2>Tax: <%= number_to_currency(@order.tax) %></h2>
<h2>Total: <%= number_to_currency(@order.total) %></h2>





