<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Update Image:</h1>
        <%= form_tag '/products', method: :post do %>
          <div>
            Name: <input type="text" name="url" value="<%= @image.url %>">
          </div>
          <div>
            Product: 
            <select name="product_id" class="form-field-dark">
              <% @products.each do |product| %>
                <option value="<%= product.id %>" <%= 'selected="selected"' if product.id == @product.product.id %>><%= product.name %></option>
              <% end %>
            </select>
          </div>
          <input type="submit" value="Update Image" class="btn btn-primary">
        <% end %>
      </div>
    </div>
  </div>
</section>