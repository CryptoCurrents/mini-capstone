<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Edit Product</h1>
        <%= form_tag "/products/#{@product.id}", method: :patch do %>
          <div>
            Name: <input type="text" name="name" value="<%= @product.name %>">
          </div>
          <div>
            Price: <input type="text" name="price" value="<%= @product.price %>">
          </div>
          <div>
            Image URL: <input type="text" name="image_url" value="<%= @product.image_url %>">
          </div>
          <div>
            Description: <input type="text" name="description" value="<%= @product.description %>"> 
          </div>
          <div>
            Supplier: 
            <select name="supplier_id" class="form-field-dark">
              <% @suppliers.each do |supplier| %>
                <option value="<%= supplier.id %>" <%= 'selected="selected"' if supplier.id == @product.supplier.id %>><%= supplier.name %></option>
              <% end %>
            </select>
          </div>
          <input type="submit" value="Update product">
        <% end %>
      </div>
    </div>
  </div>
</section>