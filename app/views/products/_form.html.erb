<% if @product.errors.any? %>
  <div id="error_explination">
    <h2><%= pluralize(@product.errors.count, "error")%> prohibited this product from being saved:</h2>
    
    <ul>
      <% @product.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1><%= purpose %> product:</h1>
        <%= form_tag url, method: verb do %>
          <div>
            Name: <input type="text" name="name" value="<%= @product.name %>">
          </div>
          <div>
            Price: <input type="text" name="price" value="<%= @product.price %>">
          </div>
          <div>
            Description: <input type="text" name="description" value="<%= @product.description %>"> 
          </div>
          <div>
            Supplier: 
            <select name="supplier_id" class="form-field-dark">
              <% @suppliers.each do |supplier| %>
                <option value="<%= supplier.id %>" <%= 'selected="selected"' if supplier.id == @product.supplier_id %>><%= supplier.name %></option>
              <% end %>
            </select>
          </div>
          <input type="submit" value="<%= purpose %> Product" class="btn btn-primary">
        <% end %>
      </div>
    </div>
  </div>
</section>